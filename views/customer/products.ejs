<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
        <div class="container-fluid d-flex flex-row justify-content-center">
            <% for (let product of prods) { %>
            <article class="card mr-4" style="width: 18rem;">
                <img class="card-img-top" style="height: 15rem;" src="<%= product.imgUrl %>" alt="<%= product.title %>">
                <div class="card-body">
                    <h5 class="card-title"><%= product.title %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= product.price %>$</h6>
                    <p class="card-text"><%= product.description %></p>
                </div>
                <div class="card-body d-flex justify-content-around">
                    <form action="/products/<%= product._id %>" method="GET">
                        <button class="btn btn-outline-primary" type="submit">Details</button>
                    </form>
                    <% if (isAuth) { %>
                    <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                    <% } %>
                </div>
            </article>
            <% } %>
        </div>
        <% } else { %>
        <h1>No available product currently</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>