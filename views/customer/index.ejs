<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
        <div class="container-fluid">
            <% for (let product of prods) { %>
            <article class="card" style="width: 18rem;">
                <img class="card-img-top" src="<%= product.imgUrl %>" alt="<%= product.title %>">
                <div class="card-body">
                    <h5 class="card-title"><%= product.title %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= product.price %>$</h6>
                    <p class="card-text"><%= product.description %></p>
                </div>
                <div class="card-body d-flex justify-content-around">
                    <form action="/products/<%= product._id %>" method="GET">
                        <button class="btn btn-outline-primary" type="submit">Details</button>
                    </form>
                    <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                </div>
            </article>
            <% } %>
        </div>
        <% } else { %>
        <h1>No available product currently</h1>
        <h3>This is a sample product</h3>
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title">Agile Practice Guide</h1>
            </header>
            <div class="card__image">
                <img src="/images/agile-practice-guide.jpg" alt="Agile Practice Guide Book">
            </div>
            <div class="card__content">
                <h2 class="product__price">$26.60</h2>
                <p class="product__description">The Agile Practice Guide provides tools, situational guidelines and an
                    understanding of the various agile approaches available to enable better results.</p>
            </div>
            <div class="card__actions">
                <button class="btn">Add to Cart</button>
            </div>
        </article>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>