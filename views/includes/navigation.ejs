<header class="main-header mb-3">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">
            <img src="/images/shops.svg" width="30" height="30" class="d-inline-block align-top" alt="">
            Nodejs Shop
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item <%= path === '/' && 'active' %>">
                    <a class="nav-link" href="/">Shop</a>
                </li>
                <li class="nav-item <%= path === '/products' && 'active' %>">
                    <a class="nav-link" href="/products">Products</a>
                </li>
                <% if (isAuth) { %>
                <li class="nav-item <%= path === '/cart' && 'active' %>">
                    <a class="nav-link" href="/cart">Cart</a>
                </li>
                <li class="nav-item <%= path === '/orders' && 'active' %>">
                    <a class="nav-link" href="/orders">Orders</a>
                </li>
                <li class="nav-item <%= path === '/admin/products' && 'active' %>">
                    <a class="nav-link" href="/admin/products">Admin Products</a>
                </li>
                <li class="nav-item <%= path === '/admin/add-product' && 'active' %>">
                    <a class="nav-link" href="/admin/add-product">Add Product</a>
                </li>
                <% } %>
            </ul>
            <ul class="navbar-nav">
                <% if (!isAuth) { %>
                <li class="nav-item <%= path === '/login' && 'active' %>">
                    <a class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item <%= path === '/signup' && 'active' %>">
                    <a class="nav-link" href="/signup">Signup</a>
                </li>
                <% } else { %>
                <li class="nav-item">
                    <form action="/logout" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button class="btn nav-link p-0" type="submit">
                            Logout
                        </button>
                    </form> 
                </li>
                <% } %>
            </ul>
        </div>
    </nav>
</header>